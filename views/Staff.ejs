</head>

<body>
    <% include ./Staff_navBar.ejs %>
        <div class="container text-center">
            <h2 class="text-center mt-5">員工登入</h2>
            <hr class="m-auto w-50 mt-3">
            <div class="row mt-5">
                <div class="col-md-6 m-auto">
                    <form action="/login" method="post">

                        <div class="row">
                            <div class="col-md-4">
                                <label for="staff_id">員工編號</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" id="staff_id" name="staff_id" class="w-75">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label for="password">密碼</label>
                            </div>
                            <div class="col-md-8">
                                <input type="password" id="password" name="password" class="w-75">
                            </div>
                        </div>
                        <button class="btn btn-success btn-lg mt-5 w-50" type="submit">登入</button>
                    </form>
                </div>
            </div>
        </div>
